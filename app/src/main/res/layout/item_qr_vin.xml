<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp"
        android:layoutDirection="ltr"
        android:paddingBottom="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/lnvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:text="@string/vin_qr"
                android:textColor="@color/grey_qr"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtvin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:autoLink="all"
                android:gravity="start"
                android:linksClickable="true"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnworldManufacturerID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:text="@string/worldManufacturerID_qr"
                android:textColor="@color/grey_qr"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtworldManufacturerID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:autoLink="all"
                android:gravity="start"
                android:linksClickable="true"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnvehicleDescriptorSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:text="@string/vehicleDescriptorSection_qr"
                android:textColor="@color/grey_qr"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtvehicleDescriptorSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnvehicleIdentifierSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:text="@string/vehicleIdentifierSection_qr"
                android:textColor="@color/grey_qr"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtvehicleIdentifierSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lncountryCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:text="@string/countryCode_qr"
                android:textColor="@color/grey_qr"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtcountryCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="start"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnvehicleAttributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:text="@string/vehicleAttributes_qr"
                android:textColor="@color/grey_qr"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtvehicleAttributes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:autoLink="all"
                android:gravity="start"
                android:linksClickable="true"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnmodelYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:text="@string/modelYear_qr"
                android:textColor="@color/grey_qr"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtmodelYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:autoLink="all"
                android:gravity="start"
                android:linksClickable="true"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnplantCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:text="@string/plantCode_qr"
                android:textColor="@color/grey_qr"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtplantCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:autoLink="all"
                android:gravity="start"
                android:linksClickable="true"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnsequentialNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:text="@string/sequentialNumber_qr"
                android:textColor="@color/grey_qr"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtsequentialNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:autoLink="all"
                android:gravity="start"
                android:linksClickable="true"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>
    </LinearLayout>
</layout>